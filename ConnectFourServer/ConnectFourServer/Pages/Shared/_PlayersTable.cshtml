@model IEnumerable<ConnectFourServer.Models.Player>

@if (!Model.Any())
{
    <p>No players to show.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Phone</th>
                <th>Country</th>
                <th>Identifier</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td>@p.Name</td>
                    <td>@p.Phone</td>
                    <td>@p.Country</td>
                    <td>@p.Identifier</td>
                    <td>
                        <a asp-page="/Edit" asp-route-id="@p.Id" class="btn btn-sm btn-warning me-1">Edit</a>
                        <form method="post" asp-page-handler="Delete" asp-route-id="@p.Id" style="display:inline"
                              onsubmit="return confirm('Are you sure you want to delete this player?');">
                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
