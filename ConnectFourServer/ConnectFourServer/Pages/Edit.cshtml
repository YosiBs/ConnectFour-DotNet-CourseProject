@page "{id:int}"
@model ConnectFourServer.Pages.EditModel
@{
    ViewData["Title"] = "Edit Player";
}

<h2>Edit Player</h2>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input type="hidden" asp-for="Player.Id" />

    <div class="mb-3">
        <label asp-for="Player.Name" class="form-label"></label>
        <input asp-for="Player.Name" class="form-control" />
        <span asp-validation-for="Player.Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Player.Phone" class="form-label"></label>
        <input asp-for="Player.Phone" class="form-control" />
        <span asp-validation-for="Player.Phone" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Player.Country" class="form-label"></label>
        <select asp-for="Player.Country" class="form-select">
            <option>Israel</option>
            <option>USA</option>
            <option>UK</option>
        </select>
        <span asp-validation-for="Player.Country" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="Player.Identifier" />

    <div class="mb-3">
        <label class="form-label">Identifier</label>
        <input class="form-control" value="@Model.Player.Identifier" disabled />
    </div>



    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-page="/Players" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
